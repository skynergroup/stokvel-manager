rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: is the user authenticated?
    function isAuth() {
      return request.auth != null;
    }
    
    // Helper: is the user a member of this stokvel?
    function isMember(stokvelId) {
      return isAuth() && 
        exists(/databases/$(database)/documents/stokvels/$(stokvelId)/members/$(request.auth.uid));
    }
    
    // Helper: is the user an admin of this stokvel?
    function isAdmin(stokvelId) {
      return isAuth() && 
        get(/databases/$(database)/documents/stokvels/$(stokvelId)/members/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.auth.uid == userId;
      allow update: if isAuth() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Stokvels (groups)
    match /stokvels/{stokvelId} {
      allow read: if isMember(stokvelId);
      allow create: if isAuth();
      allow update: if isAdmin(stokvelId);
      allow delete: if false;

      // Members subcollection
      match /members/{memberId} {
        allow read: if isMember(stokvelId);
        allow create: if isAdmin(stokvelId) || (isAuth() && request.auth.uid == memberId);
        allow update: if isAdmin(stokvelId);
        allow delete: if isAdmin(stokvelId);
      }

      // Contributions subcollection
      match /contributions/{contribId} {
        allow read: if isMember(stokvelId);
        allow create: if isMember(stokvelId);
        allow update: if isAdmin(stokvelId);
        allow delete: if false;
      }

      // Payouts subcollection
      match /payouts/{payoutId} {
        allow read: if isMember(stokvelId);
        allow create: if isAdmin(stokvelId);
        allow update: if isAdmin(stokvelId);
        allow delete: if false;
      }

      // Meetings subcollection
      match /meetings/{meetingId} {
        allow read: if isMember(stokvelId);
        allow create: if isAdmin(stokvelId);
        allow update: if isMember(stokvelId);
        allow delete: if isAdmin(stokvelId);
      }
    }

    // Invites (public read for join links)
    match /invites/{inviteId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAuth();
      allow delete: if false;
    }
  }
}
